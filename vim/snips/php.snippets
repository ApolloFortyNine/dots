# php.snippets - Snippets for php file type

snippet php "<?php ?>" w
<?php ${VISUAL}$0 ?>
endsnippet

snippet php "<?php ?>" b
<?php

${VISUAL}$0

?>
endsnippet

snippet q "Variable assignment" b
$$1 = $2;
endsnippet

snippet d "Define constant" b
define('${1:NAME}', ${2:value});
endsnippet

snippet array "array()"
array($1)
endsnippet

snippet array "$var = array();" b
$${1:arr} = array($2);
endsnippet

snippet class "Class definition" b
