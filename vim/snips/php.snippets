 * @copyright  `!v helper#snippet#Copyright()`
 */
class ${1:`!v helper#php#PathToClassName(expand("%"))`}${2: extends ${3:`!v helper#php#PathToParentClassName(expand("%"))`}} {
	${0:${VISUAL:\/\/ TODO}}
}
endsnippet

snippet fun "Function definition" b
${1:public }function ${2:fun_name}(${3})
{
	${0:${VISUAL:\/\/ TODO}}
}
endsnippet

snippet if "if (condition) { }" b
