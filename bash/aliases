#
# ALIASES
#
# Defaults for tree (color, show hidden, ignore version control)
alias tree="tree -Ca -I '.svn|.git' --dirsfirst"

# a - Show hidden
# h - Human-readable file sizes
# l - Long format
alias ll='ls -hl'
alias la='ls -ahl'

alias v=vim
alias c=clear
alias r=rails

# Git abbreviations
alias g='git'
alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gca='git commit -a'
alias gcl='git clone'
alias gco='git checkout'
alias gd='git diff'
alias gdc='git diff --cached'
alias gf='git fetch'
alias gg='git g'
alias ggg='git graph'
alias gl='git log'
alias gp='git push'
alias gpu='git pull'
alias gs='git status'

# Selenium server
alias selenium='java -jar /usr/local/Cellar/selenium-server-standalone/2.25.0/selenium-server-standalone-2.25.0.jar -p 4444'

#
# FUNCTIONS
#
# Give visual indicator of exit status of previous command.
result () {
	if [ $? = 0 ]; then
		echo -e "\033[0;32m----- Success -----\033[0m"
	else
		echo -e "\033[0;31m----- Failure -----\033[0m"
	fi
}

# Print PATH in readable form
path () {
	IFS_OLD=$IFS
	IFS=:
	printf "%s\n" $PATH
	IFS=$IFS_OLD
}
