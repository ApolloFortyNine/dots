" Settings for the five-fingered Firefox extension

group user
colorscheme styx

set hintkeys=asdfghjkl;
set showstatuslinks=command
set showtabline=always
set guioptions+=T
set editor='/opt/boxen/homebrew/bin/mvim -f +<line> <file>'
set defsearch=duckduckgo
set cookieaccept=samesite
set newtab=all

set passkeys+='^https?://www\.duolingo\.com/':<CR><Up><Down>123456789
set passkeys+='^https?://www\.youtube\.com/':k

nmap -builtin j 3j
nmap -builtin k 3k
nmap -builtin <BS> <Nop>
