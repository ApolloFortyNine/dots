# Don't display the help lists at the bottom of the screen.
# (Can always be toggled with M-X, i.e. ESC followed by x.)
set nohelp

# Allow inserting files into their own buffers.
set multibuffer

# Config file syntax
syntax "config" "\.(nanorc|bashrc|kshrc|bash_profile)$"
color blue  "\"(\\.|[^\"])*\"" "'(\\.|[^'])*'"
color brightblack "^#.*"

# Git commit message
syntax "git" "COMMIT_EDITMSG$"
color brightblack "^#.*"
